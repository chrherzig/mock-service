    <wsdl:types>
        <xsd:schema targetNamespace="http://tsystems.com/etccm/iso12855/paymentAnnouncement">
            <xsd:import schemaLocation="Common.xsd" namespace="http://tsystems.com/etccm/iso12855/common" />
            <xsd:include schemaLocation="PaymentAnnouncement.xsd" />
        </xsd:schema>
    </wsdl:types>

    <wsdl:message name="paymentAnnouncementRequest">
        <wsdl:part name="request" element="tns:InfoExchangePaymentAnnouncement" />
    </wsdl:message>

    <wsdl:message name="paymentAnnouncementResponse">
        <wsdl:part name="response" element="cm:response" />
    </wsdl:message>

    <wsdl:portType name="PaymentAnnouncementServicePT">
        <wsdl:operation name="sendPaymentAnnouncement">
            <wsdl:input message="tns:paymentAnnouncementRequest" />
            <wsdl:output message="tns:paymentAnnouncementResponse" />
        </wsdl:operation>
    </wsdl:portType>

    <wsdl:binding name="PaymentAnnouncementServiceBinding" type="tns:PaymentAnnouncementServicePT">
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http" />
        <wsdl:operation name="sendPaymentAnnouncement">
            <soap:operation soapAction="http://tsystems.com/etccm/iso12855/PaymentAnnouncementService/sendPaymentAnnouncement" />
            <wsdl:input>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:body use="literal" />
            </wsdl:output>
        </wsdl:operation>
    </wsdl:binding>

    <wsdl:service name="PaymentAnnouncementService">
        <wsdl:port name="PaymentAnnouncementServicePort" binding="tns:PaymentAnnouncementServiceBinding">
            <soap:address location="http://localhost/PaymentAnnouncementService" />
        </wsdl:port>
    </wsdl:service>

