<wsdl:definitions
    name="DailyStatementService"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:cm="http://tsystems.com/etccm/iso12855/common"
    xmlns:tns="http://tsystems.com/etccm/iso12855/dailyStatement"
    targetNamespace="http://tsystems.com/etccm/iso12855/dailyStatement">

    <wsdl:documentation>
